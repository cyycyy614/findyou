<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:id="@android:id/background" android:height="3dp" android:gravity="center_vertical">
        <shape>
            <solid android:color="#cc999999" />
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress" android:height="3dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <solid android:color="#ff5500" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress" android:height="3dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <solid android:color="#ff5500" />
                <corners android:radius="3dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
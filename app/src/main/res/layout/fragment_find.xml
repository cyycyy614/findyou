<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_bk"
    >
    <LinearLayout
        android:id="@+id/system_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultColor"
        android:orientation="vertical"
        android:visibility="visible"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/defaultColor"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <!--<ImageView-->
        <!--android:id="@+id/iv_image"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--android:src="@drawable/default_128"-->
        <!--android:scaleType="centerCrop"-->
        <!--/>-->
    <LinearLayout
        android:id="@+id/lin_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_findStory"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/fragment_bk"
        android:gravity="center_vertical">
        <!--<ImageView-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:src="@drawable/ic_news"-->
        <!--/>-->
        <TextView
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/defaultColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="找到你的故事圈"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_findStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:maxEms="18"
            android:maxLines="1"
            android:singleLine="true"
            android:text="快来分享你的故事吧"
            android:textColor="@color/defaultColor" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_item_next" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fragment_bk"
        />
    <com.findyou.findyoueverywhere.controls.MyListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
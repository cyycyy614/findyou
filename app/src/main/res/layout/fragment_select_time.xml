<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_bk"
    android:padding="15dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常用选择"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/lin_item_1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/pop_window_corner_radius_small_border_normal"
            android:layout_marginRight="5dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前一小时"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_item_2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/pop_window_corner_radius_small_border_normal"
            android:layout_marginRight="5dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前天"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_item_3"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/pop_window_corner_radius_small_border_normal"
            android:layout_marginRight="5dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_item_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨天"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_item_4"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/pop_window_corner_radius_small_border_normal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_item_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                />
        </LinearLayout>

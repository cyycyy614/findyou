<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@id/lin_title"
        >
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.baidu.mapapi.map.MapView>
        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_refresh"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/iv_items"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/iv_refresh"
            android:src="@drawable/ic_change_child"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/iv_track"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/iv_items"
            android:src="@drawable/ic_track"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>

    <com.findyou.findyoueverywhere.ui.main.map.view.ChildInfoView
        android:id="@+id/view_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_comment_dialog_container"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <ScrollView
        android:id="@+id/input_comment_dialog_bg"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    </ScrollView>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayD"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#efefef"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <EditText
            android:layout_weight="1"
            android:hint="评论"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="36dp"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="发表"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:background="#0000aa"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/input_comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:background="@color/fragment_bk"
        android:layout_gravity="bottom"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        >
        <EditText
            android:id="@+id/input_comment"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/pop_window_corner_radius_small_border_normal"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:hint="请输入帐号"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/control_editview_cursor"
            android:layout_weight="1"
            android:focusable="true"
            />
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/btn_publish_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/pop_window_corner_radius_small"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择终端模式"
                android:textStyle="bold"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_mode_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_mode_1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/lin_mode_1_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="定位更新快但比较耗电"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_mode_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_mode_2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/lin_mode_2_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="动的时候才定位一般耗电"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_mode_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_mode_3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/lin_mode_3_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="定时报点最为省电"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_mode_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_mode_4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/lin_mode_4_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="启停时报点比较省电"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
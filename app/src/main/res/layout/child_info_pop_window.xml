<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_root"
    >
    <RelativeLayout
        android:id="@+id/view_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ic_main_line"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_headimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_128"
                android:layout_marginLeft="15dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_seek_bar_pos"
                        />
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_time"
                        />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_location"
                        />
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_select_mode"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_chang"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_main_phone"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_child_info_1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_child_info_item_1_hover"
                    />
                <TextView
                    android:id="@+id/tv_child_info_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="追踪"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_child_info_2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_child_info_item_2_normal"
                    />
                <TextView
                    android:id="@+id/tv_child_info_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_child_info_3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_child_info_item_3_normal"
                    />
                <TextView
                    android:id="@+id/tv_child_info_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启停"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_child_info_4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_child_info_item_4_normal"
                    />
                <TextView
                    android:id="@+id/tv_child_info_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定时"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_child_info_5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_child_info_item_5_normal"
                    />
                <TextView
                    android:id="@+id/tv_child_info_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/view_root"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.findyou.findyoueverywhere.controls.MyTabLayoutV1
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/fragment_bk"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.findyou.findyoueverywhere.controls.MyListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:visibility="gone"
        >
        <ScrollView
            android:id="@+id/input_comment_dialog_bg"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ScrollView>
        <LinearLayout
            android:id="@+id/view_input"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGray"
            android:layout_gravity="bottom"
            >
            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pop_window_corner_radius_small_border_normal"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:hint="请输入帐号"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@drawable/control_editview_cursor"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
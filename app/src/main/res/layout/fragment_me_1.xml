<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:id="@+id/layout_headimage"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/user_center_menu_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_weight="1"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_headimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/default_256"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_item_next"
            />
    </LinearLayout>
    <include layout="@layout/controls_view_gray_line"></include>
    <LinearLayout
        android:id="@+id/layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/user_center_menu_item_selector"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_weight="1"
            />
        <!--<TextView-->
            <!--android:id="@+id/tv_nickname"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--/>-->
        <EditText
            android:id="@+id/tv_nickname"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:hint="请输入昵称"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/control_editview_cursor"
            android:paddingRight="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_item_next"
            android:visibility="gone"
            />
    </LinearLayout>
    <include layout="@layout/controls_view_gray_line"></include>
    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/user_center_menu_item_selector"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:layout_weight="1"
            />
        <!--<TextView-->
            <!--android:id="@+id/tv_phone"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--/>-->
        <EditText
            android:id="@+id/tv_phone"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:hint="请输入手机号"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/control_editview_cursor"
            android:paddingRight="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_item_next"
            android:visibility="gone"
            />
    </LinearLayout>
    <include layout="@layout/controls_view_gray_line"></include>
    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/user_center_menu_item_selector"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:layout_weight="1"
            />
        <!--<TextView-->
            <!--android:id="@+id/tv_email"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--/>-->
        <EditText
            android:id="@+id/tv_email"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:hint="请输入邮箱"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/control_editview_cursor"
            android:paddingRight="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_item_next"
            android:visibility="gone"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/fragment_bk"
        />
    <LinearLayout
        android:id="@+id/layout_birthday"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/user_center_menu_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text=""
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_item_next"
            />
    </LinearLayout>
    <include layout="@layout/controls_view_gray_line"></include>
    <LinearLayout
        android:id="@+id/layout_sex"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/user_center_menu_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_item_next"
            />
    </LinearLayout>
    <include layout="@layout/controls_view_gray_line"></include>

</LinearLayout>
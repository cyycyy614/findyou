<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/layout_headimage"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/user_center_menu_item_selector"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:layout_weight="1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_headimage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/default_256"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    />
            </LinearLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/fragment_bk"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="必选项"
                    android:layout_marginLeft="12dp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout_nickname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:layout_centerVertical="true"
                    />
                <!--<TextView-->
                <!--android:id="@+id/tv_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="5dp"-->
                <!--/>-->
                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorGray6"
                    android:textSize="14sp"
                    android:hint="请输入姓名"
                    android:textColorHint="#cccccc"
                    android:textCursorDrawable="@drawable/control_editview_cursor"
                    android:layout_marginLeft="50dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    />
            </LinearLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    />
            </LinearLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text=""
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    />
            </LinearLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <!--选填项-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/fragment_bk"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选填项"
                    android:layout_marginLeft="12dp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    />
                <!--<TextView-->
                    <!--android:id="@+id/tv_phone"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--/>-->
                <EditText
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorGray6"
                    android:textSize="14sp"
                    android:hint="请输入手机号"
                    android:textColorHint="#cccccc"
                    android:textCursorDrawable="@drawable/control_editview_cursor"
                    android:layout_marginLeft="50dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    />
                <!--<TextView-->
                    <!--android:id="@+id/tv_address"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--/>-->
                <EditText
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorGray6"
                    android:textSize="14sp"
                    android:hint="请输入地址"
                    android:textColorHint="#cccccc"
                    android:textCursorDrawable="@drawable/control_editview_cursor"
                    android:layout_marginLeft="50dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康状态"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    />
            </LinearLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体貌特征"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_looks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    />
            </LinearLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    />
                <!--<TextView-->
                    <!--android:id="@+id/tv_contact"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--/>-->
                <EditText
                    android:id="@+id/tv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorGray6"
                    android:textSize="14sp"
                    android:hint="请输入紧争联系人"
                    android:textColorHint="#cccccc"
                    android:textCursorDrawable="@drawable/control_editview_cursor"
                    android:layout_marginLeft="50dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人电话"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    />
                <!--<TextView-->
                    <!--android:id="@+id/tv_contact_phone"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--/>-->
                <EditText
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorGray6"
                    android:textSize="14sp"
                    android:hint="请输入联系人电话"
                    android:textColorHint="#cccccc"
                    android:textCursorDrawable="@drawable/control_editview_cursor"
                    android:layout_marginLeft="50dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/fragment_bk"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备码"
                    android:layout_marginLeft="12dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMEI设备号"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/tv_imei"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_device_scan"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_item_next"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <include layout="@layout/controls_view_gray_line"></include>
            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!-- Status Bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 去除actionbar下阴影：-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 设置actionbar中menu的text的size -->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 文字带阴影 -->
    <style name="chat_msg_item_font_shadow">
        <item name="android:shadowColor">#8000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- 上下滑动 动画 -->
    <style name="upDownAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="leftDownAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/left_dialog_exit</item>
    </style>
    <style name="upAlphaAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_alpha</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- 百度地图 -->
    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
